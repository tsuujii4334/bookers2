<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 max-auto">
      <h2>Editing Book</h2>

<!--バリデーションエラーメッセージ-->
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <p><% @book.errors.full_messages.each do |message| %></p>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--bookeditの記述-->
  <%= form_with model: @book do |f| %>
    <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class:"form-control" %>
    </div>
    <%= f.submit 'Update Book', class:"btn btn-success" %>
  <% end %>
        <span><%= link_to "Show",book_path(@book) %></span>
          |
        <span><%= link_to "Back",books_path %></span>
    </div>
  </div>
</div>