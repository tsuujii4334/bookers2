<h1>Books</h1>
<p>Find me in app/views/books/index.html.erb</p>


<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <%= link_to book_path(book.id) do %>
   <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>