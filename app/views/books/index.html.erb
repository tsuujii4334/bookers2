<!--フラッシュメッセージの記述-->
<div>
  <%= flash[:notice] %>
</div>



<div class="container px-5"><!--このpxはpadding x方向を意味する。pyはy方向。-->
<!--エラー時の記述-->
<% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--usershowの記述-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      
<h2>User Info</h2>
  <%= image_tag @current_user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(@current_user.id),class:"btn btn-block btn-outline-secondary" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>

<!--booknewの記述-->
  <h2 class="mt-3">New book</h2>
<!--バリデーションは一番上の記述を参照-->
  <%= form_with model: @book , url: books_path , method: :post do |f| %>
    <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :book_title, class:"form-control" %>
    </div>
    <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :book_body, class:"form-control" %>
    </div>
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  <% end %>
  </div>

    <div class="col-md-8 offset-md-1">
   <!--bookindexの記述-->
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
       </thead>
       <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <% link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              Title：<%= book.title %>
            <% end %>
          </td>
          <td>
            Opinion：<%= book.body %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>