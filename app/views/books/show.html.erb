<div>
  <%= flash[:notice] %>
</div>

<!--usershowの記述-->
<h1>User Info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <p><%= link_to "編集アイコン",edit_user_path(@user.id)  %></p>
</div>

<!--booknewの記述-->
<h1>New book</h1>
<!--バリデーションの記述はindex参照-->

  <%= form_with model: @newbook do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<!--bookshowの記述-->
<div>
  <h1>Book detail</h1>
  <%= link_to user_path(@user) do %>
    <p>投稿ユーザー画像：<%= image_tag @user.get_profile_image(100,100) %></p>
    <p>ユーザーネーム: <%= @user.name %></p>
  <% end %>
  <%= link_to book_path(@book) do %>
    <p>title：<%= @book.title %></p>
  <% end %>
    <p>opinion：<%= @book.body %></p>
  <!--bookeditへのリンクの記述-->
  <!--bookdestroyへのリンクの記述-->
  <% if @book.user == current_user %>
     <%= link_to "Edit", edit_book_path(@book) %>
     <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
</div>