<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 max-auto">
      <h2>User info</h2>
      <!--バリデーションエラーメッセージ-->
      <% if @user.errors.any? %>
       <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
      　 <ul>
      　  <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
       　<% end %>
      　 </ul>
      <% end %>
      <!--userupdateの記述-->
      <%= form_with model: @user,url: user_path(@user), method: :patch  do |f| %>
       <div class="form-group">
         <label for="user_name">Name</label>
         <%= f.text_field :name, class:"form-control" %>
       </div>
       <div class="form-group">
         <label for="userimage">Image</label>
         <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
       </div>
       <div class="form-group">
         <label for="user_introduction">Introduction</label>
         <%= f.text_area :introduction, class:"form-control" %>
       </div>
       <div class="form-group">
         <%= f.submit 'Update User', class:"btn btn-lg btn-secondary mt-4" %>
       </div>
        <% end %>
    </div>
  </div>
</div>