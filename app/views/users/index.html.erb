<!--usershowの記述-->
<h1>User Info</h1>
<div>
  <%= image_tag @current_user.get_profile_image(100,100) %>
  <h3>name</h3>
  <h3><%= @current_user.name %></h3>
  <h3><%= @current_user.introduction %></h3>
  <p><%= link_to "編集アイコン",edit_user_path(@current_user.id)  %></p>
</div>

<h1>New book</h1>
  <!--バリデーションはbookindex参照-->
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<!--userindexの記述-->
<h1>Users</h1>
<% @users.each do |user| %>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>name：<%= user.name%></p>
  <%= link_to user_path(user.id) do %>
   <p>Show</p>
  <% end %>
</div>
<% end %>