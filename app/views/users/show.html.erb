

<!-- ユーザーの詳細 -->
<h1>User Info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <p><%= link_to "編集アイコン",edit_user_pass(@user.id)  %></p>
</div>

<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>
<div>
  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>introduction：<%= book.caption %></p>
  <p>name：<%= book.user.name %></p>
</div>



<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  