<!--フラッシュメッセージの記述-->
<div>
  <%= flash[:notice] %>
</div>

<!--usershowの記述-->
<h1>User Info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>
  <p><%= link_to "編集アイコン",edit_user_path(@user.id)  %></p>
</div>

<!--bookindexの記述-->
<h2>Books</h2>
<table class="table" >
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <%= link_to user_path(book.user.id) do %>
    <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p><%= book.title %></p>
  <% end %>
    <p><%= book.body %></p>
  </tbody>
</table>
<% end %>


<!--booknewの記述-->
<h1>New book</h1>
<!--バリデーションはbookindex参照-->
  <%= form_with model: @newbook , url: books_path , method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

